import java.util.Scanner;

public class Q_1_NaturalNumbersSum {

	public static void main(String[] args) {
		
		Scanner num = new Scanner(System.in);
		
		System.out.print("Enter the number of (first) natural numbers to fined the sum of:");
        int n = num.nextInt();
        num.close();
        
        int sum, i;
        for( i = 1; i < n+1; i++ ) {
        	 sum =+ i; 	
        }

	}

}
